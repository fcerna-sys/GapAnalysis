{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "img2html/molecule-card",
  "title": "Card (Molécula)",
  "category": "widgets",
  "description": "Tarjeta compuesta con imagen, título, texto y acciones",
  "style": "file:./style.css",
  "render": "file:./render.php",
  "attributes": {
    "title": {"type": "string", "default": "Título"},
    "text": {"type": "string", "default": "Descripción corta."},
    "imageUrl": {"type": "string", "default": ""},
    "buttonText": {"type": "string", "default": "Ver más"},
    "buttonUrl": {"type": "string", "default": "#"}
  },
  "supports": {
    "spacing": {"margin": true, "padding": true},
    "color": {"background": true}
  }
}
