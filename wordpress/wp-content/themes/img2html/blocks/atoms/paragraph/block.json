{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "img2html/atom-paragraph",
  "title": "Párrafo (Átomo)",
  "category": "text",
  "description": "Párrafo básico reutilizable",
  "style": "file:./style.css",
  "render": "file:./render.php",
  "attributes": {
    "text": {
      "type": "string",
      "default": "Texto del párrafo"
    },
    "align": {
      "type": "string",
      "default": "left"
    }
  },
  "supports": {
    "spacing": {
      "margin": true
    },
    "typography": {
      "fontSize": false,
      "lineHeight": false
    },
    "color": {
      "text": false
    },
    "html": false,
    "customClassName": false
  },
  "example": {
    "attributes": {}
  },
  "version": "1.0.0"
}